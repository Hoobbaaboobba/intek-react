---
export interface Props {
	title: string;
	description: string;
	ogDescription: string;
	ogTitle: string;
	twitterDescription: string
	keywords: string
}

const {title, description, ogDescription, ogTitle, twitterDescription, keywords} = Astro.props;

import Header from '@/components/Global/Header/Header'
import '@/styles/globals.css'
import { ViewTransitions } from 'astro:transitions';
import ReviewsSection from '@/components/Global/ReviewsSection/ReviewsSection'
import NewsSection from '@/components/Global/News/NewsSection.astro'
import SubscribeSection from '@/components/Global/Subscribe/SubscribeSection.astro'
import Footer from '@/components/Global/Footer/Footer.astro'

const canonicalURL = Astro.url.href
---

<!doctype html>
<html lang="ru">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{title}</title>

		<link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
		<link rel="sitemap" href="/sitemap-index.xml"/>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

		<meta name="description" content={description}>
		<meta name="keywords" content={keywords}>
		<meta name="robots" content="index, follow">
		<meta name="author" content="ИНТЕК">

		<meta property="og:type" content="website">
		<meta property="og:title" content={ogTitle}>
		<meta property="og:description" content={ogDescription}>
		<meta property="og:url" content={canonicalURL}>
		<meta property="og:image" content="https://intek-react.vercel.app/_astro/blue-logo.aDWXgpiM.webp">

		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content={ogTitle}>
		<meta name="twitter:description" content={twitterDescription}>
		<meta name="twitter:image" content="https://intek-react.vercel.app/_astro/blue-logo.aDWXgpiM.webp">
		<link rel="canonical" href={canonicalURL}>
		<ViewTransitions/>
	</head>
	<body class="w-full flex flex-col justify-center items-center bg-white">
		<Header url={canonicalURL} client:load/>
		<slot />
		<!-- <NewsSection/> -->
		<ReviewsSection client:load/>
		<SubscribeSection/>
		<Footer/>
	</body>
</html>
	