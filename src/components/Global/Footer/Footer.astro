        href: '/',
    },
    {
        label: 'Партнёры',
        href: '/',
    },
    {
        label: 'СОУТ',
        href: '/',
    },
    {
        label: 'Контакты',
        href: '/',
    },
]

const catalogButtons = [
    {
        label: 'Шпателя',
        href: '/',
    },
    {
        label: 'Гладилки',
        href: '/',
