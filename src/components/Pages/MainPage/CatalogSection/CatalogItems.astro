---
import BlueSquare from "@/components/Global/BlueSquare.astro";
import { Image } from "astro:assets";

interface Props {
  image: any;
  title: string;
  href: string;
}

const {image, title, href}:Props = Astro.props
---
    <a
      href={`/${href}`}
      class="group relative h-full w-full overflow-hidden border border-border"
    >
      <Image
        src={image}
        alt={title}
        width='301'
        format="avif"
        height='216'
      />
      <div class="text-md absolute bottom-0 left-0 flex h-[64px] w-[90%] cursor-pointer items-center justify-center border bg-white text-center text-dark-gray transition xl:-translate-x-[72%] xl:group-hover:translate-x-0">
        <div class="w-full p-2 text-center">{title}</div>
        <BlueSquare />
      </div>
    </a>
