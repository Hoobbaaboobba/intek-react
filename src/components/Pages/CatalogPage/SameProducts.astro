---
import { data } from "productsData";
import { ContentCard } from "./ContentCard";

const url = Astro.url.pathname
---

<section class="bg-super-light-gray w-full flex justify-center items-center py-16 px-4">
    <div class="max-w-[1300px] w-full">
        <h2 class="text-3xl font-semibold text-dark-gray">Сопутствующие товары</h2>
        <div class="w-full grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3 mt-8">
            {data.filter(x => x.href.split('/')[1] !== url).slice(0, 3).map((item) => (
                <ContentCard img={item.img} title={item.title} href={item.href}/>
            ))}
        </div>
    </div>
</section>